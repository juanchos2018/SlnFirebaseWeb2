<script>


    $(document).ready(function () {
       
        listavehiculos();
    });

    function listavehiculos() {
        $.ajax({
            type: "GET",
            url: '/Vehiculo/GetVehiculos/',
            contentType: "application/json",

            success: function (data) {
                var rows = '';
                $.each(data, function (i, item) {
                    rows += "<tr>"
                    rows += "<td>" + item.placa_vehiculo + "</td>"
                    rows += "<td>" + item.marca_vehiculo + "</td>"
                    rows += "<td>" + item.modelo_vehiculo + "</td>"
                    rows += "<td>" + item.color_vehiculo + "</td>"
                    rows += "<td>" + item.anio_vehiculo + "</td>"
                    rows += "<td>" + item.estado_vehiculo + "</td>"
                    rows += "<td>   <input type='image' src="+ item.rutafoto_vehiculo +" width='100px' height='100px' /> </td>"
                    rows += "<td><button type='button' id='btnEdit' class='btn btn-default' >Edit</button> <button type='button' id='btnDelete' class='btn btn-danger' >Delete</button></td>"
                    rows += "</tr>";
                    $("#listVehiculos tbody").html(rows);
                });
            }

        })
    }
    $("#btnSave2").click(function () {

        if (window.FormData == undefined)
            alert("Error: FormData is undefined");

        else {
            var fileUpload = $("#fileToUpload").get(0);
            var placa_vehiculo = $("#placa_vehiculo").val();
            var marca_vehiculo = $("#marca_vehiculo").val();
            var modelo_vehiculo = $("#modelo_vehiculo").val();
            var color_vehiculo = $("#color_vehiculo").val();
            var anio_vehiculo = $("#anio_vehiculo").val();
            var estado_vehiculo = $("#estado_vehiculo").val();
            var files = fileUpload.files;

            var fileData = new FormData();

            fileData.append(files[0].name, files[0]);
            fileData.append("placa_vehiculo", placa_vehiculo);
            fileData.append("marca_vehiculo", marca_vehiculo);
            fileData.append("modelo_vehiculo", modelo_vehiculo);
            fileData.append("color_vehiculo", color_vehiculo);
            fileData.append("anio_vehiculo", anio_vehiculo);
            fileData.append("estado_vehiculo", estado_vehiculo);
            $("#AgregarVehiculo").modal('hide');
           // ShowProgress();
            $.ajax({
                url: '/Vehiculo/Create2',
                type: 'post',
                datatype: 'json',
                contentType: false,
                processData: false,
                async: false,
                data: fileData,
                success: function (response) {

                    console.log("respuesta es:"+response);
                   
                   // apagar();
                    listavehiculos();
                  //  clear();
                   
                },
                error: function (xhr, status) {
                    alert('Disculpe, existió un problema');
                },

              
                
            });
        }

    });

    $("#btnSave").click(function (e) {
            var data = {
            placla_vehiculo: $("#placla_vehiculo").val(),
            marca_vehiculo: $("#marca_vehiculo").val(),
            modelo_vehiculo: $("#modelo_vehiculo").val(),
            color_vehiculo: $("#color_vehiculo").val(),
            anio_vehiculo: $("#anio_vehiculo").val(),
            estado_vehiculo: $("#estado_vehiculo").val(),
            rutafoto_vehiculo: $("#rutafoto_vehiculo").val()
        }

      //  alert("va a gregar we");
        $.ajax({
            url: '/Vehiculo/Create/',
            type: 'POST',
            dataType: 'json',
            data: data,
            
            success: function (data) {
                listavehiculos();
                $("#AgregarVehiculo").modal('hide');
                clear();
            },
            error: function (err) {
                alert("Error: " + err.responseText);
            }
        })


    });

    function ShowProgress() {
        setTimeout(function () {
            var modal = $('<div />');
            modal.addClass("modales");
            $('body').append(modal);
            var loading = $(".loading");
            loading.show();
            var top = Math.max($(window).height() / 2 - loading[0].offsetHeight / 2, 0);
            var left = Math.max($(window).width() / 2 - loading[0].offsetWidth / 2, 0);
            loading.css({ top: top, left: left });
        }, 200);
    }

    function apagar() {
        var loading = $(".loading");
        loading.remove();
    }
    
       
   


</script>